<web-app
        version="3.0"
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

    <display-name>Location Service</display-name>

    <!--https://jersey.github.io/documentation/latest/deployment.html#deployment.servlet.3-->
    <servlet>
        <servlet-name>com.jonjam.pinboard.service.location.svc.config.LocationApplication</servlet-name>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>com.jonjam.pinboard.service.location.svc.config.LocationApplication</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>

    <!-- https://github.com/google/guice/wiki/Servlets -->
    <filter>
        <filter-name>guiceFilter</filter-name>
        <filter-class>com.google.inject.servlet.GuiceFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>guiceFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>