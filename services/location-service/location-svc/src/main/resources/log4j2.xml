<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <File name="File" fileName="${env:CATALINA_HOME}/logs/${env:SERVICE_NAME}.log">
            <PatternLayout>
                <Pattern>[%d{HH:mm:ss,SSS}] [%p] %c{3} - %m%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>
</Configuration>
